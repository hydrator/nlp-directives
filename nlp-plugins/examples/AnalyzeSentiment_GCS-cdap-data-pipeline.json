{
    "name": "AnalyzeSentiment_GCS",
    "description": "Data Pipeline Application",
    "artifact": {
        "name": "cdap-data-pipeline",
        "version": "6.1.1",
        "scope": "SYSTEM"
    },
    "config": {
        "resources": {
            "memoryMB": 2048,
            "virtualCores": 1
        },
        "driverResources": {
            "memoryMB": 2048,
            "virtualCores": 1
        },
        "connections": [
            {
                "from": "GCS",
                "to": "NLP Analyze Sentiment"
            },
            {
                "from": "NLP Analyze Sentiment",
                "to": "JSONFormatter"
            },
            {
                "from": "JSONFormatter",
                "to": "GCS2"
            }
        ],
        "comments": [],
        "postActions": [],
        "properties": {},
        "processTimingEnabled": true,
        "stageLoggingEnabled": false,
        "stages": [
            {
                "name": "GCS",
                "plugin": {
                    "name": "GCSFile",
                    "type": "batchsource",
                    "label": "GCS",
                    "artifact": {
                        "name": "google-cloud",
                        "version": "0.13.2",
                        "scope": "SYSTEM"
                    },
                    "properties": {
                        "project": "auto-detect",
                        "format": "text",
                        "serviceFilePath": "auto-detect",
                        "filenameOnly": "false",
                        "recursive": "false",
                        "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"offset\",\"type\":\"long\"},{\"name\":\"body\",\"type\":\"string\"}]}",
                        "referenceName": "GCSOURCE",
                        "path": "${INPUT_FILE}"
                    }
                },
                "outputSchema": [
                    {
                        "name": "etlSchemaBody",
                        "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"offset\",\"type\":\"long\"},{\"name\":\"body\",\"type\":\"string\"}]}"
                    }
                ],
                "type": "batchsource",
                "label": "GCS",
                "icon": "fa-plug"
            },
            {
                "name": "NLP Analyze Sentiment",
                "plugin": {
                    "name": "NLPAnalyzeSentiment",
                    "type": "transform",
                    "label": "NLP Analyze Sentiment",
                    "artifact": {
                        "name": "nlp-plugins",
                        "version": "1.0.0-SNAPSHOT",
                        "scope": "USER"
                    },
                    "properties": {
                        "errorHandling": "stopOnError",
                        "serviceFilePath": "auto-detect",
                        "sourceField": "body",
                        "encoding": "UTF8"
                    }
                },
                "outputSchema": [
                    {
                        "name": "etlSchemaBody",
                        "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"language\",\"type\":\"string\"},{\"name\":\"score\",\"type\":\"float\"},{\"name\":\"magnitude\",\"type\":\"float\"},{\"name\":\"sentences\",\"type\":{\"type\":\"array\",\"items\":{\"type\":\"record\",\"name\":\"a22dd4113f2fd4cbabc066409acd40716\",\"fields\":[{\"name\":\"content\",\"type\":\"string\"},{\"name\":\"beginOffset\",\"type\":\"int\"},{\"name\":\"score\",\"type\":\"float\"},{\"name\":\"magnitude\",\"type\":\"float\"}]}}}]}"
                    }
                ],
                "inputSchema": [
                    {
                        "name": "GCS",
                        "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"offset\",\"type\":\"long\"},{\"name\":\"body\",\"type\":\"string\"}]}"
                    }
                ],
                "type": "transform",
                "label": "NLP Analyze Sentiment",
                "icon": "fa-plug"
            },
            {
                "name": "JSONFormatter",
                "plugin": {
                    "name": "JSONFormatter",
                    "type": "transform",
                    "label": "JSONFormatter",
                    "artifact": {
                        "name": "transform-plugins",
                        "version": "2.3.4",
                        "scope": "SYSTEM"
                    },
                    "properties": {
                        "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"json\",\"type\":\"string\"}]}"
                    }
                },
                "outputSchema": [
                    {
                        "name": "etlSchemaBody",
                        "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"json\",\"type\":\"string\"}]}"
                    }
                ],
                "inputSchema": [
                    {
                        "name": "NLP Analyze Sentiment",
                        "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"language\",\"type\":\"string\"},{\"name\":\"score\",\"type\":\"float\"},{\"name\":\"magnitude\",\"type\":\"float\"},{\"name\":\"sentences\",\"type\":{\"type\":\"array\",\"items\":{\"type\":\"record\",\"name\":\"a22dd4113f2fd4cbabc066409acd40716\",\"fields\":[{\"name\":\"content\",\"type\":\"string\"},{\"name\":\"beginOffset\",\"type\":\"int\"},{\"name\":\"score\",\"type\":\"float\"},{\"name\":\"magnitude\",\"type\":\"float\"}]}}}]}"
                    }
                ],
                "type": "transform",
                "label": "JSONFormatter",
                "icon": "icon-jsonformatter"
            },
            {
                "name": "GCS2",
                "plugin": {
                    "name": "GCS",
                    "type": "batchsink",
                    "label": "GCS2",
                    "artifact": {
                        "name": "google-cloud",
                        "version": "0.13.2",
                        "scope": "SYSTEM"
                    },
                    "properties": {
                        "project": "auto-detect",
                        "suffix": "yyyy-MM-dd-HH-mm",
                        "format": "json",
                        "serviceFilePath": "auto-detect",
                        "location": "us",
                        "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"json\",\"type\":\"string\"}]}",
                        "path": "${OUTPUT_FILE}",
                        "referenceName": "GCSSINK"
                    }
                },
                "outputSchema": [
                    {
                        "name": "etlSchemaBody",
                        "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"json\",\"type\":\"string\"}]}"
                    }
                ],
                "inputSchema": [
                    {
                        "name": "JSONFormatter",
                        "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"json\",\"type\":\"string\"}]}"
                    }
                ],
                "type": "batchsink",
                "label": "GCS2",
                "icon": "fa-plug"
            }
        ],
        "schedule": "0 * * * *",
        "engine": "spark",
        "numOfRecordsPreview": 100,
        "description": "Data Pipeline Application",
        "maxConcurrentRuns": 1
    }
}