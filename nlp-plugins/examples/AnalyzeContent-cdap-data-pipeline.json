{
    "name": "AnalyzeContent",
    "description": "Data Pipeline Application",
    "artifact": {
        "name": "cdap-data-pipeline",
        "version": "6.1.1",
        "scope": "SYSTEM"
    },
    "config": {
        "resources": {
            "memoryMB": 2048,
            "virtualCores": 1
        },
        "driverResources": {
            "memoryMB": 2048,
            "virtualCores": 1
        },
        "connections": [
            {
                "from": "File",
                "to": "NLP Classify Content"
            },
            {
                "from": "NLP Classify Content",
                "to": "JSONFormatter"
            },
            {
                "from": "JSONFormatter",
                "to": "File2"
            }
        ],
        "comments": [],
        "postActions": [],
        "properties": {},
        "processTimingEnabled": true,
        "stageLoggingEnabled": false,
        "stages": [
            {
                "name": "File",
                "plugin": {
                    "name": "File",
                    "type": "batchsource",
                    "label": "File",
                    "artifact": {
                        "name": "core-plugins",
                        "version": "2.3.4",
                        "scope": "SYSTEM"
                    },
                    "properties": {
                        "format": "text",
                        "filenameOnly": "false",
                        "recursive": "false",
                        "ignoreNonExistingFolders": "false",
                        "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"offset\",\"type\":\"long\"},{\"name\":\"body\",\"type\":\"string\"}]}",
                        "referenceName": "SentimentSourceFile",
                        "path": "${INPUT_FILE}"
                    }
                },
                "outputSchema": [
                    {
                        "name": "etlSchemaBody",
                        "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"offset\",\"type\":\"long\"},{\"name\":\"body\",\"type\":\"string\"}]}"
                    }
                ],
                "type": "batchsource",
                "label": "File",
                "icon": "icon-file"
            },
            {
                "name": "NLP Classify Content",
                "plugin": {
                    "name": "NLPClassifyContent",
                    "type": "transform",
                    "label": "NLP Classify Content",
                    "artifact": {
                        "name": "nlp-plugins",
                        "version": "1.0.0-SNAPSHOT",
                        "scope": "USER"
                    },
                    "properties": {
                        "errorHandling": "stopOnError",
                        "serviceFilePath": "${GCS_SERVICE_ACCOUNT}",
                        "sourceField": "body",
                        "encoding": "${ENCODING}"
                    }
                },
                "outputSchema": [
                    {
                        "name": "etlSchemaBody",
                        "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"categories\",\"type\":{\"type\":\"array\",\"items\":{\"type\":\"record\",\"name\":\"a267093464e5f48acb7fbc5716af0f66c\",\"fields\":[{\"name\":\"name\",\"type\":\"string\"},{\"name\":\"confidence\",\"type\":\"float\"}]}}}]}"
                    }
                ],
                "inputSchema": [
                    {
                        "name": "File",
                        "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"offset\",\"type\":\"long\"},{\"name\":\"body\",\"type\":\"string\"}]}"
                    }
                ],
                "type": "transform",
                "label": "NLP Classify Content",
                "icon": "fa-plug"
            },
            {
                "name": "JSONFormatter",
                "plugin": {
                    "name": "JSONFormatter",
                    "type": "transform",
                    "label": "JSONFormatter",
                    "artifact": {
                        "name": "transform-plugins",
                        "version": "2.3.4",
                        "scope": "SYSTEM"
                    },
                    "properties": {
                        "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"json\",\"type\":\"string\"}]}"
                    }
                },
                "outputSchema": [
                    {
                        "name": "etlSchemaBody",
                        "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"json\",\"type\":\"string\"}]}"
                    }
                ],
                "inputSchema": [
                    {
                        "name": "NLP Classify Content",
                        "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"categories\",\"type\":{\"type\":\"array\",\"items\":{\"type\":\"record\",\"name\":\"a267093464e5f48acb7fbc5716af0f66c\",\"fields\":[{\"name\":\"name\",\"type\":\"string\"},{\"name\":\"confidence\",\"type\":\"float\"}]}}}]}"
                    }
                ],
                "type": "transform",
                "label": "JSONFormatter",
                "icon": "icon-jsonformatter"
            },
            {
                "name": "File2",
                "plugin": {
                    "name": "File",
                    "type": "batchsink",
                    "label": "File2",
                    "artifact": {
                        "name": "core-plugins",
                        "version": "2.3.4",
                        "scope": "SYSTEM"
                    },
                    "properties": {
                        "suffix": "yyyy-MM-dd-HH-mm",
                        "format": "json",
                        "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"json\",\"type\":\"string\"}]}",
                        "referenceName": "Results",
                        "path": "${OUTPUT_FILE}"
                    }
                },
                "outputSchema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"json\",\"type\":\"string\"}]}",
                "inputSchema": [
                    {
                        "name": "JSONFormatter",
                        "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"json\",\"type\":\"string\"}]}"
                    }
                ],
                "type": "batchsink",
                "label": "File2",
                "icon": "icon-file"
            }
        ],
        "schedule": "0 * * * *",
        "engine": "spark",
        "numOfRecordsPreview": 100,
        "description": "Data Pipeline Application",
        "maxConcurrentRuns": 1
    }
}